{
    "name": "sails-react-bootstrap-webpack",
    "version": "4.3.0",
    "description": "An opinionated base configuration of Sails, with Webpack for React support, and Bootstrap for styling. A start-up in a box!",
    "keywords": [
        "sails",
        "react",
        "bootstrap",
        "webpack",
        "monorepo",
        "request logging",
        "startup"
    ],
    "dependencies": {
        "csrf": "3.1.0",
        "json-stringify-safe": "5.0.1",
        "lodash": "4.17.21",
        "moment-timezone": "0.5.43",
        "otplib": "12.0.1",
        "qrcode": "1.5.3",
        "sails": "1.5.8",
        "sails-hook-orm": "4.0.2",
        "sails-hook-sockets": "2.0.4",
        "sails-mysql": "3.0.1",
        "scrypt-kdf": "2.0.1",
        "superagent": "8.1.2"
    },
    "devDependencies": {
        "@babel/core": "7.23.2",
        "@babel/eslint-parser": "7.22.15",
        "@babel/preset-env": "7.23.2",
        "@babel/preset-react": "7.22.15",
        "@ngrok/ngrok": "^0.9.0",
        "@popperjs/core": "2.11.8",
        "babel-loader": "9.1.3",
        "bootstrap": "5.3.2",
        "bootstrap-icons": "1.11.1",
        "chai": "4.3.10",
        "chai-spies": "1.1.0",
        "chai-uuid": "1.0.6",
        "codecov": "^3.8.3",
        "copy-webpack-plugin": "11.0.0",
        "core-js": "3.33.2",
        "css-loader": "6.8.1",
        "eslint": "8.53.0",
        "eslint-plugin-react": "7.33.2",
        "favicons": "7.1.4",
        "favicons-webpack-plugin": "6.0.1",
        "file-loader": "6.2.0",
        "fixted": "4.2.3",
        "html-webpack-plugin": "5.5.3",
        "mini-css-extract-plugin": "2.7.6",
        "mocha": "10.2.0",
        "npm-run-all": "4.1.5",
        "nyc": "15.1.0",
        "prop-types": "15.8.1",
        "react": "18.2.0",
        "react-bootstrap": "v2.9.1",
        "react-dom": "18.2.0",
        "react-router-dom": "6.18.0",
        "readline-sync": "1.4.10",
        "sass": "1.69.5",
        "sass-loader": "13.3.2",
        "style-loader": "3.3.3",
        "supertest": "6.3.3",
        "webpack": "5.89.0",
        "webpack-cli": "5.1.4",
        "webpack-dev-server": "4.15.1",
        "webpack-merge": "5.10.0"
    },
    "scripts": {
        "build": "run-s clean build:prod",
        "build:dev": "run-s clean build:dev:webpack",
        "build:dev:webpack": "webpack --mode development --config webpack/dev-build.config.js",
        "build:prod": "NODE_ENV=production webpack --mode production --config webpack/prod.config.js",
        "clean": "rm -rf .tmp && mkdir -p .tmp/public",
        "codecov": "nyc report --reporter=text-lcov > test/coverage/report.lcov && codecov --file=test/coverage/report.lcov",
        "coverage": "npm run lint && NODE_ENV=testing nyc --reporter=html mocha",
        "create:admin": "sails run create-admin",
        "custom-tests": "NODE_ENV=testing mocha",
        "debug": "node --inspect app.js",
        "generate:dek": "node -p \"require('crypto').randomBytes(32).toString('base64')\"",
        "generate:token": "node -p \"const crypto = require('crypto'); crypto.createHmac('sha512', crypto.randomBytes(42)).update(crypto.randomBytes(42) + new Date()).digest('hex');\"",
        "generate:uuid": "node -p \"require('crypto').randomUUID()\"",
        "lift": "node app.js",
        "lift:prod": "NODE_ENV=production node app.js",
        "lines": "git ls-files --exclude-standard -- ':!:**/*.[pjs][npv]g' ':!:**/*.ai' ':!:.*' ':!:**/.*' ':!:CHANGELOG.md' ':!:**/*.md' ':!:*.md' ':!:test/coverage/*' ':!:assets/styles' ':!:assets/dependencies' ':!:package.json' ':!:package-lock.json' ':!:config' ':!:LICENSE' | xargs wc -l",
        "lint": "eslint . --max-warnings=0 --report-unused-disable-directives && echo 'âœ”  Your .js files look good.'",
        "open:client": "webpack-dev-server --mode development --open --config webpack/dev.config.js",
        "start": "run-p open:client lift",
        "start:debug": "npm-run-all --parallel open:client debug",
        "test": "npm run lint && npm run custom-tests && echo 'Done.'"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/neonexus"
        }
    ],
    "main": "app.js",
    "repository": {
        "type": "git",
        "url": "git://github.com/neonexus/sails-react-bootstrap-webpack.git"
    },
    "author": "NeoNexus DeMortis <neonexus.demortis@gmail.com>",
    "license": "Unlicense",
    "engines": {
        "node": ">=20.9"
    }
}
